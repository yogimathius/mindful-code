{
  "name": "mindful-code",
  "displayName": "Mindful Code",
  "description": "Programming session tracker with flow state optimization",
  "version": "0.1.0",
  "publisher": "mindfulcode",
  "author": "Mindful Code Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yogimathius/mindful-code"
  },
  "bugs": {
    "url": "https://github.com/yogimathius/mindful-code/issues"
  },
  "homepage": "https://github.com/yogimathius/mindful-code#readme",
  "keywords": ["productivity", "focus", "flow-state", "coding", "session-tracking"],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mindfulCode.startSession",
        "title": "Start Coding Session",
        "category": "Mindful Code"
      },
      {
        "command": "mindfulCode.pauseSession",
        "title": "Pause Session",
        "category": "Mindful Code"
      },
      {
        "command": "mindfulCode.endSession",
        "title": "End Session",
        "category": "Mindful Code"
      },
      {
        "command": "mindfulCode.showDashboard",
        "title": "Show Dashboard",
        "category": "Mindful Code"
      }
    ],
    "configuration": {
      "title": "Mindful Code",
      "properties": {
        "mindfulCode.idleTimeoutMinutes": {
          "type": "number",
          "default": 5,
          "description": "Minutes of inactivity before pausing session"
        },
        "mindfulCode.enableFlowDetection": {
          "type": "boolean",
          "default": true,
          "description": "Enable flow state detection"
        },
        "mindfulCode.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show session notifications"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.34.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "sqlite3": "^5.1.6"
  }
}